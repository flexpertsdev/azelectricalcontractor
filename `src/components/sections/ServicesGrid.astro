<path>src/components/sections/ServicesGrid.astro</path>
<content>
---
import IconArrowRight from '@components/icons/IconArrowRight.astro';

/**
 * Defines the structure for a single service item in the grid.
 */
export interface ServiceItem {
  title: string;
  description: string;
  image: string; // The source path for the background image.
  url: string; // The destination URL for the service page.
}

/**
 * Defines the props for the ServicesGrid component.
 */
export interface Props {
  headline: string;
  subheadline: string;
  items: ServiceItem[];
}

const { headline, subheadline, items } = Astro.props;
---

<!--
  This section is designed with a dark background to create visual contrast
  on the page, as per the homepage spec. It highlights the company's key
  service offerings in a modern, interactive grid format.
-->
<section class="bg-neutral-900 py-16 sm:py-20 lg:py-24">
  <div class="container">
    <!-- Section Header -->
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="font-heading text-3xl font-bold tracking-tight text-white sm:text-4xl">
        {headline}
      </h2>
      <p class="mt-6 text-lg leading-8 text-neutral-300">
        {subheadline}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-4 md:grid-cols-2">
      {
        items.map((item) => (
          <a
            href={item.url}
            class="group relative block h-96 overflow-hidden rounded-xl shadow-lg transition-transform duration-300 ease-in-out hover:scale-105"
            aria-label={`Learn more about ${item.title}`}
          >
            <!-- Background Image with Zoom Effect -->
            <img
              src={item.image}
              alt={item.title}
              class="absolute inset-0 h-full w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-110"
              loading="lazy"
              width="400"
              height="400"
            />

            <!-- Permanent Gradient for Title Readability -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent" />

            <!-- Hover Gradient Overlay from Design System -->
            <div class="absolute inset-0 bg-gradient-to-t from-primary/90 to-primary/30 opacity-0 transition-opacity duration-300 ease-in-out group-hover:opacity-100" />

            <!-- Content -->
            <div class="relative flex h-full flex-col justify-end p-6 text-white">
              <h3 class="font-heading text-xl font-bold">{item.title}</h3>
              
              <!-- Content Revealed on Hover -->
              <div class="mt-2 opacity-0 transition-all duration-300 ease-in-out group-hover:opacity-100">
                <p class="text-sm text-neutral-200">{item.description}</p>
                <div class="mt-4 flex items-center text-sm font-semibold">
                  <span>Learn More</span>
                  <IconArrowRight class="ml-2 h-4 w-4" />
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
</content>