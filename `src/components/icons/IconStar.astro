---
import type { HTMLAttributes } from 'astro/types';

/**
 * A star icon, typically used to represent ratings, favorites, or guarantees
 * (e.g., "Satisfaction Guaranteed"). This component renders a solid-style SVG
 * that can be styled with Tailwind CSS classes.
 *
 * It uses `fill="currentColor"` so its color can be controlled by
 * Tailwind's text color utilities (e.g., `text-accent`, `text-secondary`).
 *
 * @example
 * <!-- Renders a yellow icon with a height and width of 6 units -->
 * <IconStar class="h-6 w-6 text-accent" />
 */
export interface Props extends HTMLAttributes<'svg'> {
  /** Additional CSS classes to apply to the SVG element. */
  class?: string;
}

const { class: className, ...attrs } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="currentColor"
  class:list={['h-6 w-6', className]}
  role="img"
  aria-hidden="true"
  focusable="false"
  {...attrs}
>
  <title>Star Icon</title>
