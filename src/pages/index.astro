};

const trustBarItems = [
  {
    icon: "shield-check",
    title: "Certified Technicians",
    description: "Licensed, insured, and highly trained professionals."
  },
  {
    icon: "file-dollar",
    title: "Upfront Pricing",
    description: "Clear, transparent quotes with no hidden fees."
  },
  {
    icon: "star",
    title: "Satisfaction Guaranteed",
    description: "We don't leave until you're 100% satisfied."
  }
];

const serviceItems = [
  {
    title: "Smart Home & Automation",
    description: "Integrate lighting, security, and climate control into one seamless system. We are Arizona's smart home integration experts.",
    image: "/images/services/smart-home.jpg",
    url: "/services/smart-home-automation"
  },
  {
    title: "EV Charger Installation",
    description: "Fast, safe, and reliable home and commercial EV charging solutions for all major vehicle brands.",
    image: "/images/services/ev-charger.jpg",
    url: "/services/ev-charger-installation"
  },
  {
    title: "Electrical Panel Upgrades",
    description: "Ensure your home's electrical system can safely handle modern power demands with a crucial panel upgrade.",
    image: "/images/services/panel-upgrade.jpg",
    url: "/services/panel-upgrades"
  },
  {
    title: "Commercial Services",
    description: "Tenant improvements, dedicated circuits, and energy-efficient lighting for offices, retail, and businesses.",
    image: "/images/services/commercial.jpg",
    url: "/services/commercial-electrical"
  }
];

const whyChooseUsItems = [
  {
    icon: "bolt",
    title: "Certified Expertise, Unmatched Safety",
    description: "Our licensed electricians are masters of their craft, staying current with the latest technology and safety codes. We treat your property with respect and ensure every job is done right the first time, protecting what matters most to you.",
    image: "/images/why-us/technician-working.jpg",
    imageAlt: "A certified Westgate Enterprises electrician carefully working on an electrical panel."
  },
  {
    icon: "chat-bubble",
    title: "A Clear & Transparent Process",
    description: "We believe in clear communication. We start with a full consultation to explain your options, provide a detailed and transparent quote, and keep you informed every step of the way. No surprises, just professional service.",
    image: "/images/why-us/consultation.jpg",
    imageAlt: "A Westgate Enterprises electrician having a clear consultation with a client."
  }
];

const statsItems = [
  { value: "15+", label: "Years of Experience" },
  { value: "500+", label: "Satisfied Customers" },
  { value: "1,200+", label: "Projects Completed" },
  { value: "5", label: "Star Average Rating" }
];

const testimonialItems = [
  {
    quote: "Westgate Enterprises was incredible. They installed our EV charger and a full smart lighting system. The process was smooth, the technicians were knowledgeable and professional, and the result is fantastic. Highly recommend!",
    author: "Sarah L.",
    location: "Glendale, AZ"
  },
  {
    quote: "As a small business owner, electrical downtime is not an option. Westgate handled our entire tenant improvement project flawlessly. They were on time, on budget, and the quality of their work is top-notch. They are our go-to electricians now.",
