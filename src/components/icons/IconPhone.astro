---
import type { HTMLAttributes } from 'astro/types';

/**
 * A phone icon, typically used to represent a phone number or a call-to-action
 * related to making a call. This component renders a solid-style SVG that can
 * be styled with Tailwind CSS classes.
 *
 * It uses `fill="currentColor"` so its color can be controlled by
 * Tailwind's text color utilities (e.g., `text-primary`, `text-neutral-700`).
 *
 * @example
 * <!-- Renders a primary-colored icon with a height and width of 5 units -->
 * <IconPhone class="h-5 w-5 text-primary" />
 */
export interface Props extends HTMLAttributes<'svg'> {
  /** Additional CSS classes to apply to the SVG element. */
  class?: string;
}

const { class: className, ...attrs } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="currentColor"
  class:list={['h-6 w-6', className]}
  role="img"
  aria-hidden="true"
  focusable="false"
  {...attrs}
>
  <title>Phone Icon</title>
