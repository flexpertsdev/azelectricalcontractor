---
// This component does not require any props.
// All content is sourced directly from the strategic brief for consistency.

const companyName = "Westgate Enterprises, LLC";
const companySlogan = "Your reliable electrical partner for Arizona's modern homes and businesses.";
const address = "PO BOX 2378, Glendale, AZ 85311";
const phoneNumber = "(623) 266-9706";
const phoneNumberHref = `tel:${phoneNumber.replace(/\D/g, '')}`;
const currentYear = new Date().getFullYear();

// Navigation links for the footer, providing quick access to key pages.
const footerNavLinks = [
  { text: "Services", href: "/services" },
  { text: "Smart Home", href: "/services/smart-home-automation" },
  { text: "EV Charging", href: "/services/ev-charger-installation" },
  { text: "About Us", href: "/about" },
  { text: "Contact", href: "/contact" },
  { text: "Get a Quote", href: "/quote" },
];

// Business hours from the strategic brief.
const businessHours = [
  { day: "Mon - Fri", time: "9:00 AM â€“ 5:00 PM" },
  { day: "Sat - Sun", time: "Closed" },
];
---

<footer class="bg-neutral-900" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="container py-16 sm:py-20 lg:py-24">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-4 lg:gap-8">
      <!-- Column 1: Company Info & Slogan -->
      <div class="md:col-span-2 lg:col-span-1">
        <a href="/" class="text-xl font-bold text-white transition-colors hover:text-neutral-200">
          Westgate Enterprises
        </a>
        <p class="mt-4 text-sm leading-6 text-neutral-400">{companySlogan}</p>
      </div>

      <!-- Column 2: Quick Links -->
      <div>
        <h3 class="text-base font-semibold leading-6 text-white">Quick Links</h3>
        <ul role="list" class="mt-4 space-y-2">
          {footerNavLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm leading-6 text-neutral-400 transition-colors hover:text-primary">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 3: Contact Information -->
      <div>
        <h3 class="text-base font-semibold leading-6 text-white">Contact Us</h3>
        <address class="mt-4 space-y-2 text-sm not-italic leading-6 text-neutral-400">
          <p>{address}</p>
          <p>
            <a href={phoneNumberHref} class="transition-colors hover:text-primary">
              {phoneNumber}
            </a>
          </p>
        </address>
      </div>

      <!-- Column 4: Business Hours -->
      <div>
        <h3 class="text-base font-semibold leading-6 text-white">Hours</h3>
        <ul role="list" class="mt-4 space-y-2 text-sm leading-6 text-neutral-400">
          {businessHours.map((item) => (
            <li>
              <span class="font-medium text-neutral-200">{item.day}:</span> {item.time}
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar with Copyright -->
    <div class="mt-16 border-t border-white/10 pt-8 sm:mt-20 lg:mt-24">
      <p class="text-center text-xs leading-5 text-neutral-400">
        &copy; {currentYear} {companyName}. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>